{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^db:generate", "^build"],
      "env": ["PORT", "NODE_ENV", "JWT_SECRET", "BETTER_AUTH_URL", "BETTER_AUTH_SECRET"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "cache": false
    },
    "server#dev": {
      "dependsOn": ["^db:generate", "@repo/api#build"],
      "cache": false,
      "persistent": true
    },
    "db:generate": {},
    "db:migrate": {
      "env": [
        "DATABASE_USER",
        "DATABASE_PASSWORD",
        "DATABASE_HOST",
        "DATABASE_PORT",
        "DATABASE_NAME",
        "DATABASE_SCHEMA"
      ],
      "cache": false
    },
    "db:push": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "interactive": true
    },
    "db:pull": {
      "cache": false,
      "interactive": true
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    "db:seed": {
      "env": [
        "DATABASE_USER",
        "DATABASE_PASSWORD",
        "DATABASE_HOST",
        "DATABASE_PORT",
        "DATABASE_NAME",
        "DATABASE_SCHEMA"
      ],
      "cache": false
    }
  }
}
